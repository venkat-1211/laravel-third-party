{
    "settings": {
      "number_of_shards": 1,
      "number_of_replicas": 0,
      "analysis": {
        "analyzer": {
          "english_custom": {
            "type": "custom",
            "tokenizer": "standard",
            "filter": ["lowercase","english_stop","english_stemmer"]
          }
        },
        "filter": {
          "english_stop": {
            "type": "stop",
            "stopwords": "_english_"
          },
          "english_stemmer": {
            "type": "stemmer",
            "name": "english"
          }
        }
      }
    },
    "mappings": {
      "properties": {
        "title": {
          "type": "text",
          "analyzer": "english_custom"
        },
        "description": {
          "type": "text",
          "analyzer": "english_custom"
        },
        "price": {
          "type": "double"
        },
        "category": {
          "type": "keyword"
        },
        "created_at": {
          "type": "date"
        }
      }
    }
  }
  